    <script type="text/javascript" src="[[PlayerBundle]]"></script>
</head>
<!--[if lt IE 7 ]><body class="ie6"><![endif]-->
<!--[if IE 7 ]><body class="ie7"><![endif]-->
<!--[if IE 8 ]><body class="ie8"><![endif]-->
<!--[if IE 9 ]><body class="ie9"><![endif]-->
<!--[if (gt IE 9)|!(IE)]><!--><body><!--<![endif]-->
{% for item in twig %}
    {{ item|raw }}
{% endfor %}
</body>
<script type="text/javascript">
    window.globalOptions = {
      originalWidth: {{ width }},
      originalHeight: {{ height }},
      duration: {{ duration }},
      cmsDateFormat: '{{ cmsDateFormat }}'
    };
    var widgetData = [];
    {% for item in data %}
    widgetData.push({{ item|json_encode|raw }});
    {% endfor %}
</script>
{% if elementGroups %}
<script type="text/javascript">
    var elements = [];
    {% for item in elements %}
    elements.push({{ item|raw }});
    {% endfor %}
</script>
{% endif %}
{% for id, item in hbs %}
    <script type="text/x-handlebars-template" id="hbs-{{ id }}">{{ item|raw }}</script>
{% endfor %}
</html>