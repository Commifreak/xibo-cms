<module>
    <id>core-twitter</id>
    <name>Twitter</name>
    <author>Core</author>
    <description>Twitter</description>
    <class></class>
    <type>twitter</type>
    <dataType>social-media</dataType>
    <dataCacheKey>%searchTerm%_%language%_%resultType%_%tweetCount%</dataCacheKey>
    <schemaVersion>2</schemaVersion>
    <assignable>1</assignable>
    <regionSpecific>1</regionSpecific>
    <renderAs>html</renderAs>
    <defaultDuration>60</defaultDuration>
    <settings></settings>
    <properties>
        <property id="searchTerm" type="input">
            <title>Search Term</title>
            <helpText>Search term. You can test your search term in the twitter.com search box first.</helpText>
            <default></default>
        </property>
        <property id="language" type="input">
            <title>Language</title>
            <helpText>Language in which tweets should be returned</helpText>
            <default></default>
        </property>
        <property id="resultType" type="dropdown" mode="single">
            <title>Type</title>
            <helpText>Recent shows only the most recent tweets, Popular the most popular and Mixed includes both popular and recent results.</helpText>
            <default>1</default>
            <options>
                <option name="1">Mixed</option>
                <option name="2">Recent</option>
                <option name="3">Popular</option>
            </options>
            <playerCompatibility android="v3 R304" windows="v3 R303" linux="TBC" webos="TBC" tizen="TBC">Fit supported from:</playerCompatibility>
        </property>
        <property id="resultContent" type="dropdown" mode="single">
            <title>Content Type</title>
            <helpText>This is the intended tweet content type.</helpText>
            <default>1</default>
            <options>
                <option name="0">All Tweets</option>
                <option name="1">Tweets with text only content</option>
                <option name="2">Tweets with text and image content</option>
            </options>
        </property>
        <property id="tweetDistance" type="number">
            <title>Distance</title>
            <helpText>Distance in miles that the tweets should be returned from. Set to 0 for no restrictions.</helpText>
            <default></default>
        </property>
    </properties>
    <preview></preview>
</module>