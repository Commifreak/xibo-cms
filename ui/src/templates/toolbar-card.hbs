<div class="toolbar-card {{#neq dataType ""}}toolbar-card-menu{{/neq}} {{#if favourited}}favourited{{/if}}" 
    data-toggle="tooltip" 
    data-type="module" 
    data-sub-type="{{type}}"
    data-data-type="{{dataType}}"
    data-region-specific="{{regionSpecific}}"
    data-valid-ext="{{ validExtensions }}"
    data-max-size="{{ maxSize }}" 
    data-max-size-message="{{ maxSizeMessage }}"
    data-title="{{description}}">
    
    <div class="btn-favourite" data-toggle="tooltip" data-placement="left" 
        {{#unless favourited}}
            data-title="{{trans.addAsFavourite}}
        {{/unless}}
        ">
        <i class="{{#if favourited}}fas{{else}}far{{/if}} fa-star"></i>
    </div>

    {{#neq dataType ""}}
        <div class="open-submenu" data-title="{{trans.open}}" data-toggle="tooltip" data-placement="right">
            <i class="fa fa-angle-right"></i>
        </div>
    {{else}}
        <div class="select-button">
            <i class="fa fa-check selectedShow"></i>
        </div>
    {{/neq}}
    
    <i class="fa module-icon-{{type}} card-icon"></i>
    
    <span class="card-title">{{name}}</span>
</div>