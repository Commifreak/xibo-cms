<div class="form-group xibo-form-input" {{#if renderCondition}}data-render-condition="{{renderCondition}}"{{/if}}>
    <label for="{{id}}" class="control-label"><strong>{{title}}</strong></label>
    <i class="fa fa-question-circle form-help-popup" data-toggle="tooltip" data-placement="top" title="{{helpText}}"></i>
    <input type="number" class="form-control" {{#if step}}step="{{step}}"{{/if}} id="{{id}}" name="{{id}}" value="{{value}}" /> 
</div>