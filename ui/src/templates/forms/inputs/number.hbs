<div class="form-group xibo-form-input {{customClass}}" {{#if visibility}}data-visibility="{{visibility}}"{{/if}}>
    <label for="{{id}}" class="control-label"><strong>{{title}}</strong></label>
    {{#if helpText}}
        <i class="fa fa-question-circle form-help-popup tooltip-always-on" data-toggle="tooltip" data-placement="top" title="{{helpText}}"></i>
    {{/if}}
    <input type="number" class="form-control" {{#if step}}step="{{step}}"{{/if}} id="{{id}}" name="{{id}}" value="{{value}}" /> 
</div>