<div class="form-check pb-3">
    <input type="checkbox" class="form-check-input" id="{{id}}" name="{{id}}" value="{{value}}" {{#if value}}checked="checked"{{/if}} />
    <label for="{{id}}" class="form-check-label">{{title}}</label>
    <i class="fa fa-question-circle form-help-popup checkbox-popup" data-toggle="tooltip" data-placement="top" title="{{helpText}}"></i>
</div>