<div class="toolbar-card toolbar-card-element" 
    data-toggle="tooltip" 
    data-type="element" 
    data-sub-type="{{type}}"
    data-data-type="{{dataType}}"
    data-template-id="{{templateId}}"
    data-title="{{title}}">
    
    <div class="add-area action-area" data-title="{{trans.add}}" data-toggle="tooltip" data-placement="left">
        <i class="fa fa-plus"></i>
    </div>
    <div class="drag-area action-area" data-title="{{trans.grab}}" data-toggle="tooltip" data-placement="right">
        <i class="fa fa-hand-rock-o"></i>
    </div>
    
    <span class="card-title">{{title}}</span>
</div>